---
import SocialLink from './SocialLink.astro';

const socials = [
	{
		name: 'GitHub',
		url: 'https://github.com/moonmeister',
		primaryColor: '#24292e',
		textColor: '#fafbfc',
	},
	{
		name: 'LinkedIn',
		url: 'https://linkedin.com/in/aj-moon/',
		primaryColor: '#2867b2',
		textColor: '#ffffff',
	},
	{
		name: 'Twitter',
		url: 'https://twitter.com/moon_meister',
		primaryColor: '#1da1f2',
		textColor: '#14171a',
	},
];
---

<section class="flex flex-col items-center my-16" id="footer-right">
	<ul class="social justify-center flex flex-wrap">
		{
			socials.map(({name, url, textColor, primaryColor}) => {

				return (
					<li>
						<SocialLink class="inline-block mb-2 shadow-lg" title={name} {url} {primaryColor} {textColor} />
					</li>
				);
			})
		}
	</ul>

	<p class="justify-inherit display-inherit mt-8 tracking-tight">
		&copy;{new Date().getFullYear()} Alex Moon. Built with&nbsp;
		<a
			aria-label="Astro Site"
			rel="noopener"
			target="_blank"
			href="https://astro.build"
		>
			Astro</a
		>
		 .
	</p>
</section>
<style>
	.social {
		a {
			outline-color: theme('colors.gray.100');
		}

		@screen canhover {
			li a {
				@apply transform transition-transform duration-100 ease-out;
			}

			li:hover,
			li:focus {
				a {
					@apply shadow-lg -translate-y-1 ease-in;
				}
			}
		}
	}
</style>
